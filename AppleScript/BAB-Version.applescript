use AppleScript version "2.4"use framework "Foundation"use scripting additionsset appBundleID to "com.sunny.BetterAndBetter"set theURL to current application's NSWorkspace's sharedWorkspace()'s URLForApplicationWithBundleIdentifier:appBundleIDset appInfoPlist to ((theURL as text) & "Contents:Info.plist")set AppleScript's text item delimiters to " "set sysVerStr to current application's NSProcessInfo's processInfo()'s operatingSystemVersionString()set sysVerStr to text item 2 of (sysVerStr as text)set appInfoPlist to POSIX path of appInfoPlistset theDict to current application's NSDictionary's dictionaryWithContentsOfFile:appInfoPlistset verStr to ("BetterAndBetter " & (theDict's valueForKeyPath:"CFBundleShortVersionString") as text) & Â¬	" on macOS " & (system version of (get system info))set the clipboard to verStrtell application "System Events"	key code 123	delay 0.3	keystroke (key code 124 using {command down})	delay 0.3	key code 49	delay 0.3	keystroke (key code 9 using {command down})end tell